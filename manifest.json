{
  "manifest_version": 3,
  "name": "G-Connect PowerTools",
  "version": "1.0.0",
  "description": "Garmin Connect custom enhancements.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "*://connect.garmin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://connect.garmin.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "ui/styles.css"
      ]
    }
  ]
}